{% extends 'layouts/full-width.html.twig' %}
{% block content %}
    <div class="container">
        <h1>Articles du blog</h1>
        {% if posts is not empty %}
            {% for post in posts %}
                <div class="post bg-secondary">
                    <div class="row">
                        <div class="col-md-5">
                            <div class="post-image" style="background-image: url('{{ img(post.image)  }}-mini{{ post.extension }}')"></div>
                        </div>
                        <div class="col-md-7 post-content">
                            <h2>{{ post.title }}</h2>
                            <small>par {{ post.username }}, le {{ post.added }}{% if post.updated %}, modifi√© le {{ post.updated }}{% endif %}</small>

                            <p>{{ post.chapo }}</p>
                            <a href="/article-{{ post.id }}" class="btn btn-primary">Voir le post</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="alert alert-warning">
                Il n'y a pas d'articles.
            </div>
        {% endif %}
        {{  include ('blog/parts/_pagination.html.twig') }}
    </div>
{% endblock %}